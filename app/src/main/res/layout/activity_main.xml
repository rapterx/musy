<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/playerBar" />

    <LinearLayout
        android:id="@+id/playerBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@drawable/player_bar_background"
        android:padding="12dp"
        android:elevation="6dp">

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="0"
            android:max="100"
            android:thumbTint="@color/primary"
            android:progressTint="@color/primary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:weightSum="51">

            <ImageButton
                android:id="@+id/prevBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_skip_previous_24"
                android:background="?android:selectableItemBackgroundBorderless"
                app:tint="@android:color/black"
                android:contentDescription="@string/prev" />

            <ImageButton
                android:id="@+id/rewindBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_fast_rewind_24"
                android:background="?android:selectableItemBackgroundBorderless"
                app:tint="@android:color/black"
                android:contentDescription="@string/rewind" />

            <ImageButton
                android:id="@+id/playPauseBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_play_arrow_24"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="@string/play"
                app:tint="@color/primary" />

            <ImageButton
                android:id="@+id/nextBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_skip_next_24"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="@string/next"
                app:tint="@android:color/black" />

            <ImageButton
                android:id="@+id/shuffleButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_shuffle_24"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="@string/shuffle"
                app:tint="@android:color/black"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
